{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/*": [
        "workspace/src/*"
      ],
      "@workspace-tests/*": [
        "workspace/tests/*"
      ],
      "@workspace-public/*": [
        "workspace/public/*"
      ]
    }
  },
  "include": [
    "tests/**/*.ts",
    "workspace/src/**/*.ts"
  ]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/*": ["./workspace/src/*.ts"],
      "@workspace-tests/*": ["./workspace/tests/*.ts"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "workspace/src/**/*.ts",
    "workspace/tests/**/*.ts"
  ]
}

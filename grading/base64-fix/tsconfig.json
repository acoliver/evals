{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "noEmit": true,
    "paths": {
      "@workspace/*": ["workspace/src/*"],
      "@workspace-tests/*": ["workspace/tests/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "workspace/src/**/*.ts"
  ]
}
